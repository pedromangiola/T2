<%= form_for(entry) do |f| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Titulo %>
    <%= f.text_field :Titulo, autofocus: true, class: "form-control"%>
  </div>

  <div class="field">
    <%= f.label :Bajada %>
    <%= f.text_area :Bajada, maxlength: 200, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :Cuerpo %>
    <%= f.text_area :Cuerpo, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.date_select :Fecha , { :discard_day => true, :discard_month => true, :discard_year => true }%>
  </div>

<br>
<br>

  <div class="actions">
    <%= f.submit  class: 'btn btn-primary'%>
  </div>
<% end %>
